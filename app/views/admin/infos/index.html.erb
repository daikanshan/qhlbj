<p id="notice"><%= notice %></p>

<h1>公司简介</h1>

<table class="table">
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_infos.each do |admin_info| %>
      <tr>
        <td><%= admin_info.title %></td>
        <td><%= admin_info.content %></td>
        <td><%= link_to '显示详情', admin_info %></td>
        <td><%= link_to '编辑', edit_admin_info_path(admin_info) %></td>
        <td><%= link_to '删除', admin_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
