<%= form_for(@admin_information) do |f| %>

  <div class="form-group">
    <%= f.label "标题" %><br>
    <%= f.text_field :title,class:"form-control" %>
  </div>
  <%= label_tag "内容" %>
  <%= f.cktext_area :content,:ckeditor => {:uiColor => '#34495E', :toolbar => 'full'} %>
  <br/>
  <div class="actions">
    <%= f.submit '确定',class:"btn btn-success" %>
  </div>
<% end %>
