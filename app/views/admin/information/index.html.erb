<p id="notice"><%= notice %></p>

<h1>最新动态</h1>
<div id="quick-option" class="quick_option btn-group" role="group" base-url="<%= admin_information_index_url %>">
  <a href="<%= new_admin_information_path %>" data-method="get" rel="nofollow" class="btn btn-primary">
    <i class="glyphicon glyphicon-plus"></i>
    添加动态
  </a>
  <a id="view" class="btn btn-info" disabled="disabled">
    <i class="glyphicon glyphicon-align-justify"></i>
    详细信息
  </a>
  <a id="edit" class="btn btn-info" disabled="disabled">
    <i class="glyphicon glyphicon-pencil"></i>
    编辑
  </a>
  <a id="del" rel="nofollow" class="btn btn-danger" disabled="disabled">
    <i class="glyphicon glyphicon-trash"></i>
    批量删除
  </a>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <label class="checkbox">
          <input type="checkbox" class="p_checkbox" id="check_all">
        </label>
        <br>
      </th>
      <th>标题</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_information.each do |admin_information| %>
      <tr class="item_line">
        <td>
          <label class="checkbox">
            <input type="checkbox" class="p_checkbox" value="<%= admin_information.id %>">
          </label>
        </td>
        <td><%= admin_information.title %></td>
        <td><%= admin_information.content[1..12] %></td>
        <td><%= link_to '显示详情', admin_information %></td>
        <td><%= link_to '编辑', edit_admin_information_path(admin_information) %></td>
        <td><%= link_to '删除', admin_information, method: :delete, data: { confirm: '是否删除该动态?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加动态', new_admin_information_path %>
