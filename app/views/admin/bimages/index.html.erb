<p id="notice"><%= notice %></p>
<h1>大图管理</h1>

<div id="quick-option" class="quick_option btn-group" role="group" base-url="<%= admin_bimages_url %>">
  <a href="<%= new_admin_bimage_path %>" data-method="get" rel="nofollow" class="btn btn-primary">
    <i class="glyphicon glyphicon-plus"></i>
    添加大图
  </a>
  <a id="view" class="btn btn-info" disabled="disabled">
    <i class="glyphicon glyphicon-align-justify"></i>
    详细信息
  </a>
  <a id="edit" class="btn btn-info" disabled="disabled">
    <i class="glyphicon glyphicon-pencil"></i>
    编辑
  </a>
  <a id="del" rel="nofollow" class="btn btn-danger" disabled="disabled">
    <i class="glyphicon glyphicon-trash"></i>
    批量删除
  </a>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <label class="checkbox">
          <input type="checkbox" class="p_checkbox" id="check_all">
        </label>
        <br>
      </th>
      <th>标题</th>
      <th>图片</th>
      <th>简介</th>
      <th>状态</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_bimages.each do |admin_bimage| %>
      <tr class="item_line">
        <td>
          <label class="checkbox">
            <input type="checkbox" class="p_checkbox" value="<%= admin_bimage.id %>">
          </label>
        </td>
        <td><%= admin_bimage.title %></td>
        <td><%= image_tag admin_bimage.avatar_url(:small) if admin_bimage.avatar %></td>
        <td><%= admin_bimage.abstract[0..10]+"..." %></td>
        <td><%= admin_bimage.isShown %></td>
        <td><%= link_to '显示详情', admin_bimage %></td>
        <td><%= link_to '编辑', edit_admin_bimage_path(admin_bimage) %></td>
        <td><%= link_to '删除', admin_bimage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加大图', new_admin_bimage_path %>
