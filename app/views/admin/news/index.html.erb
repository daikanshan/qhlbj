<p id="notice"><%= notice %></p>

<h1>行业新闻</h1>

<div class="quick_option btn-group" role="group" base-url="<%= admin_news_index_url %>">
  <a href="<%= new_admin_news_path %>" data-method="get" rel="nofollow" class="btn btn-primary">
    <i class="glyphicon glyphicon-plus"></i>
    添加新闻
  </a>
  <a id="view" class="btn btn-info" disabled="disabled">
    <i class="glyphicon glyphicon-align-justify"></i>
    详细信息
  </a>
  <a id="edit" class="btn btn-info" disabled="disabled">
    <i class="glyphicon glyphicon-pencil"></i>
    编辑
  </a>
  <a id="del" rel="nofollow" class="btn btn-danger" disabled="disabled">
    <i class="glyphicon glyphicon-trash"></i>
    批量删除
  </a>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <label class="checkbox">
          <input type="checkbox" class="p_checkbox" id="check_all">
        </label>
        <br>
      </th>
      <th>标题</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_news.each do |admin_news| %>
      <tr class="item_line">
        <td>
          <label class="checkbox">
            <input type="checkbox" class="p_checkbox" value="<%= admin_news.id %>">
          </label>
        </td>
        <td><%= admin_news.name %></td>
        <td><%= admin_news.content[0..20] %></td>
        <td><%= link_to '显示详情', admin_news %></td>
        <td><%= link_to '编辑', edit_admin_news_path(admin_news) %></td>
        <td><%= link_to '删除', admin_news, method: :delete, data: { confirm: '是否删除该新闻?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加新闻', new_admin_news_path %>
