
<div class="ppt">
  <div class="banner-outer">
    <div class="banner">
        <ul>
          <% @mubu.each do |mubu| %>
            <li>
              <div class="banner_item">
                <div class="img">
                  <%= image_tag "bgd.png" ,class:"bgd" %>
                  <%= image_tag mubu.avatar_url(:big),class:"mubu" %>
                </div>
                <div class="info">
                  <h2 class="title"><%= mubu.title %></h2>
                  <p class="abstract"><%= mubu.abstract[0..50]+"......" %></p>
                </div>
              </div>

            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
