<%= form_for(@admin_config) do |f| %>
  <% if @admin_config.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_config.errors.count, "error") %> prohibited this admin_config from being saved:</h2>

      <ul>
      <% @admin_config.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "名称" %><br>
    <%= f.text_field :name,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "图片" %><br>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <div class="form-group">
    <div class="form-group">
      <%= f.label "状态" %><br>
      <%= f.radio_button 'val', 1 %>显示<br>
      <%= f.radio_button 'val', 0 %>不显示
    </div>
  </div>
  <% if @admin_config&&@admin_config.url %>
    <%= f.label :url %><br>
    <%= f.text_field :url,class:"form-control" %>
  <% end %>
  <div class="actions">
    <%= f.submit '确认'%>
  </div>
<% end %>
