<%= form_for(@admin_product) do |f| %>
  <% if @admin_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul>
      <% @admin_product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "名称" %>
    <%= f.text_field :name,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "图片" %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <div class="form-group">
    <%= f.label "选择分类" %>
    <%= select_tag "admin_product[category_id]",
          options_from_collection_for_select(@categories,'id','name',"#{@category}"),
          class:"form-control" %>
  </div>

  <%= label_tag "产品介绍" %>
  <%= f.cktext_area :describe,:ckeditor => {:uiColor => '#34495E', :toolbar => 'full'} %>
  <br/>
  <div class="form-group">
    <%= f.submit "确认",class:"btn btn-success" %>
  </div>
<% end %>
