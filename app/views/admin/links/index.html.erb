<p id="notice"><%= notice %></p>

<h1>友情链接</h1>

<table class="table">
  <thead>
    <tr>
      <th>名称</th>
      <th>地址</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_links.each do |admin_link| %>
      <tr>
        <td><%= admin_link.name %></td>
        <td><%= admin_link.url %></td>
        <td><%= link_to '显示详情', admin_link %></td>
        <td><%= link_to '编辑', edit_admin_link_path(admin_link) %></td>
        <td><%= link_to '删除', admin_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

