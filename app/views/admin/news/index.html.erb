<p id="notice"><%= notice %></p>

<h1>Listing Admin News</h1>

<div class="quick_option btn-group" role="group" base-url="<%= admin_news_url %>">
  <a href="<%= new_admin_news_path %>" data-method="get" rel="nofollow" class="btn btn-default">
    <i class="glyphicon glyphicon-plus"></i>
    新建分类
  </a>
  <a id="view" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-align-justify"></i>
    详细信息
  </a>
  <a id="edit" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-pencil"></i>
    编辑
  </a>
  <a id="del" rel="nofollow" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-trash"></i>
    批量删除
  </a>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_news.each do |admin_news| %>
      <tr>
        <td><%= admin_news.name %></td>
        <td><%= admin_news.content %></td>
        <td><%= link_to 'Show', admin_news %></td>
        <td><%= link_to 'Edit', edit_admin_news_path(admin_news) %></td>
        <td><%= link_to 'Destroy', admin_news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_admin_news_path %>
