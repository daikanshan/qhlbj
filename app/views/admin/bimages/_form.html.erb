    <%= f.hidden_field :avatar_cache %>
  </div>
  <div class="form-group">
    <%= f.label "链接" %><br>
    <%= f.text_field :url ,class:"form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label "简介" %><br>
    <%= f.text_area :abstract ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label "状态" %><br>
    <%= f.radio_button 'shown', 1 %>显示<br>
    <%= f.radio_button 'shown', 0 %>不显示
  </div>

  <div class="actions">
    <%= f.submit "确认",class:"btn btn-success"%>
  </div>
